{
	"pluginSearchDirs": ["."],
	"semi": true,
	"printWidth": 100,
	"useTabs": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"singleQuote": true,
	"quoteProps": "consistent",
	"overrides": [
		{
			"files": ["**/*.ts"],
			"options": {
				"tabWidth": 4,
				"printWidth": 80
			}
		},
		{
			"files": ["**/*.tsx"],
			"options": {
				"tabWidth": 2,
				"printWidth": 100
			}
		}
	],
	"importOrder": [
		"^react$",
		"^next$",
		"^react/(.*)$",
		"^next/(.*)$",
		"<THIRD_PARTY_MODULES>",
		"^~/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
