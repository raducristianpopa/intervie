{
	"name": "intervie",
	"version": "1.0.0",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/csiongapp/csiong"
	},
	"author": "Radu-Cristian Popa <praducristian@gmail.com> (https://github.com/bearslair)",
	"scripts": {
		"setup": "pnpm prepare && pnpm preinstall",
		"prepare": "husky install",
		"preinstall": "npx only-allow pnpm",
		"typecheck": "tsc --noEmit",
		"dev": "concurrently -c green.bold,blue.bold,red.bold,white.bold 'pnpm:dev:docker' 'pnpm:dev:next' 'pnpm:dev:codegen' 'pnpm:prisma:studio'",
		"codegen": "pnpm codegen:schema && pnpm codegen:graphql",
		"prettier": "pnpm prettier:format && pnpm prettier:check",
		"build": "pnpm prisma:generate && next build",
		"start": "next start",
		"lint": "next lint",
		"dev:docker": "docker compose up",
		"dev:next": "next dev",
		"dev:codegen": "pnpm run codegen:graphql -- watch",
		"prisma:studio": "prisma studio",
		"prisma:migrate": "prisma migrate dev",
		"prisma:generate": "prisma generate",
		"codegen:schema": "dotenv -- ts-node --transpile-only -r tsconfig-paths/register ./src/graphql/index.ts",
		"codegen:graphql": "graphql-codegen",
		"codegen:clean": "trash \"./src/**/__generated__/**\"",
		"prettier:format": "prettier --config .prettierrc.cli.js --write \"**/*.{js,jsx,ts,tsx,html,scss,json,yml,md}\"",
		"prettier:check": "prettier --config .prettierrc.cli.js --check \"**/*.{js,jsx,ts,tsx,html,scss,json,yml,md}\""
	},
	"dependencies": {
		"@apollo/client": "^3.6.9",
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@headlessui/react": "^1.7.1",
		"@next/bundle-analyzer": "^12.3.0",
		"@pothos/core": "^3.21.0",
		"@pothos/plugin-errors": "^3.7.0",
		"@pothos/plugin-prisma": "^3.33.0",
		"@pothos/plugin-scope-auth": "^3.13.0",
		"@pothos/plugin-simple-objects": "^3.5.0",
		"@pothos/plugin-validation": "^3.7.0",
		"@prisma/client": "^4.3.1",
		"autoprefixer": "^10.4.10",
		"class-variance-authority": "^0.2.3",
		"clsx": "^1.2.1",
		"date-fns": "^2.29.3",
		"graphql": "^16.6.0",
		"graphql-helix": "^1.13.0",
		"hash-wasm": "^4.9.0",
		"iron-session": "^6.2.1",
		"next": "12.3.0",
		"phosphor-react": "^1.4.1",
		"postcss": "^8.4.16",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"tailwindcss": "^3.1.8",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^2.12.0",
		"@graphql-codegen/near-operation-file-preset": "^2.4.1",
		"@graphql-codegen/typescript": "^2.7.3",
		"@graphql-codegen/typescript-operations": "^2.5.3",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.7",
		"@trivago/prettier-plugin-sort-imports": "^3.3.0",
		"@types/node": "18.7.17",
		"@types/react": "18.0.20",
		"@types/react-dom": "18.0.6",
		"concurrently": "^7.4.0",
		"dotenv": "^16.0.2",
		"dotenv-cli": "^6.0.0",
		"eslint": "8.23.1",
		"eslint-config-next": "12.3.0",
		"husky": "^8.0.1",
		"prisma": "^4.3.1",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0",
		"typescript": "4.8.3"
	},
	"engines": {
		"pnpm": ">=6.0.0",
		"node": ">=16.0.0"
	}
}
